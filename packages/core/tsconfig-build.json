{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "../../dist/packages/core",
        "target": "es5",
        "lib": [
            "es6",
            "es2015"
        ],
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "files": [
        "public_api.ts"
    ]
}