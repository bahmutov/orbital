{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "ES5"
    },
    "include": [
        "typings/index.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}